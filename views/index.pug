extends layout

block content
  nav( role="navigation", class=["navbar","navbar-fixed-top","navbar-inverse"] )
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          img(class="img-responsive" src="images/here-logo.svg")
      .collapse.navbar-collapse( id="navbar" )
        ul.nav.navbar-nav
          li(class="active"): a( href="/newBuild") Request a Build
          li(class=""): a( href="/list") list
    
  .container
    table#table.table.table-hover.table-bordered.table-condensed
      thead
        tr
          th Hostname
          th Domain
          th CPU's
          th Memory
          th HD Size
          th COR Ticket
      tbody#theBody
        each val,i in buildList
          - var id = "trid" + i;
            tr(id=id)
              td(contenteditable='true')= val.hostName
              td(contenteditable='true')= val.domainName
              td(contenteditable='true')= val.cpus
              td(contenteditable='true')= val.memory
              td(contenteditable='true')= val.hdSize
              td= val.comments
              td
                button.btn.btn-primary.btn-xs(onclick='copyRow('+id+')') Copy

  .container#test
    table#table.table.table-hover.table-bordered.table-condensed
      thead
        tr
          th Hostname
          th Domain
          th CPU's
          th Memory
          th HD Size
          th COR Ticket
      tbody#blahBody

  .container#jsGrid