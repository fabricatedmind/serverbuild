extends layout

block content
  nav( role="navigation", class=["navbar","navbar-fixed-top","navbar-inverse"] )
    .container
      .navbar-header
        button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#', aria-expanded='false', aria-controls='navbar')
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/")
          img(class="img-responsive" src="images/here-logo.svg")
      .collapse.navbar-collapse( id="navbar" )
        ul.nav.navbar-nav
          li(class="active"): a( href="/newBuild") Request a Build
          li(class=""): a( href="/list") list
    
  .container
    .row
      .col-md-6.col-md-offset-3
        h1.display-4.m-b-2 Server Info
        
        form(method='post' action='/')
          div.form-group
            label(for='hostname') Hostname: 
            input.form-control(type='text', name='hostname')
          div.form-group
            label(for='domainname') Domainname:
            input.form-control(type='text',name='domainname')
          button.btn.btn-primary(type='submit') Submit




